{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/my-data.schema.json",
  "title": "Course document schema",
  "description": "The schema for the course document I am designing.",
  "type": "object",
  "properties": {
    "courseId": {
        "type": "integer",
        "description": "Unique number that will serve as primary key for the courses document database"
    },
    "courseName": {
        "type": "string",
        "description": "The name of the golf course."    
    },
    "tees": {
        "type": "string",
        "description": "Name of tees."
    },
    "courseSide": {
        "type": "string",
        "description": "Course section: Front 9, Back 9, or Full 18",
        "enum": [
            "Front",
            "Back",
            "All"
        ]
    },
    "location": {
        "type": "string",
        "description": "Where the course is located."
    },
    "rating": {
        "type": "number",
        "description": "Course rating."
    },
    "slope": {
        "type": "integer",
        "description": "Course slope."
    },
    "yardage": {
        "type": "integer",
        "description": "Total yards for this section of the course."
    },
    "par": {
        "type": "integer",
        "description": "Par for this section of the course."
    },
    "holes": {
        "type": "array",
        "description": "An ordered list of golf holes for the course.",        
        "minItems": 9,
        "maxItems": 18,
        "items": {
            "type": "object",
            "properties": {
                "holeNumber": {"type": "integer"},
                "yardage": {"type": "integer"},
                "par": {"type": "integer"},
                "handicap": {"type": "integer"}                
            }
        }
    }

  },
  "required": [
    "courseId",
    "courseName",
    "tees",
    "courseSide",
    "location",    
    "rating",
    "slope",
    "par",
    "holes"
  ]
}